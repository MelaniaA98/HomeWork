#7. Write a program that finds the longest palindromic substring of a given string. Try to be as efficient as possible!

a=input("Give a string:")


def longestpalstr(a):
    c=" "
    for i in a:
        for j in range(i[1],len(a)):
            if i==j and i+1==j-1:
                for k in range (i,j):
                    print (k)

b=longestpalstr(a)


def longestpalstr(a):
    c=" "
    for i in range(len(a)):
        for j in range(len(a),i,-1):
            if i==j:
                while i==j :
                    c+=i
                else:
                    continue
    print(c)

b=longestpalstr("atrbbrtm")
print(b)



a="bamintinm"
a.lower() #csak kisbetuk
#szokozok kiszedese

l=[]

for i in a:
    l.append(i)
print(l) #normalis lista

lf= l[::-1] #forditott lista
print(lf)

def keres():
    for j in l:
        for k in lf:
            print(j,k)

